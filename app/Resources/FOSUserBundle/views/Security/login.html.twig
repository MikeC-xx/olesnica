{% extends 'admin_base.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}
{% block fos_user_content %}

<div class="panel panel-default panel-login center-block">
  <div class="panel-heading">
    <img src="{{ asset('assets/images/hanacka.svg') }}"><img src="{{ asset('assets/images/olesnica-doloplazy.svg') }}">
  </div>
  <div class="panel-body">
    {% if error %}
      <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post">
      <div class="form-group">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <label for="username">{{ 'security.login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />

        <label for="password">{{ 'security.login.password'|trans }}</label>
        <input type="password" id="password" name="_password" required="required" class="form-control" />
      </div>
      <div class="form-group">
        <div class="checkbox pull-left">
          <label>
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
          </label>
        </div>

        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-default pull-right" />
      </div>
    </form>
  </div>
</div>

{% endblock fos_user_content %}
